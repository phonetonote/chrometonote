{
  "manifest_version": 3,

  "name": "chrometonote",
  "description": "send your open tabs to your tool for thought",
  "version": "1.1",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "bookmarks"],

  "host_permissions": ["<all_urls>"]
}
